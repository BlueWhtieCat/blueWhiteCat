<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.july.mymall.commodityservice.mapper.AttributeMapper">

    <resultMap id="AttributeResultMap" type="com.july.mymall.commodityservice.entity.Attribute">
        <id column="id" property="id" />
        <result column="category_id" property="categoryId" />
        <result column="name" property="name" />
        <result column="value_type" property="valueType" />
        <result column="options" property="options" />
        <result column="is_required" property="isRequired" />
        <result column="is_searchable" property="isSearchable" />
        <result column="sort" property="sort" />
    </resultMap>

    <!-- 根据分类ID查询属性列表 -->
    <select id="getByCategoryId" resultMap="AttributeResultMap">
        SELECT
            id,
            category_id,
            name,
            value_type,
            options,
            is_required,
            is_searchable,
            sort,
            create_time,
            update_time
        FROM attribute
        WHERE category_id = #{categoryId}
        ORDER BY sort ASC
    </select>

    <!-- 根据ID查询单个属性 -->
    <select id="getById" resultMap="AttributeResultMap">
        SELECT * FROM attribute
        WHERE id = #{id}
    </select>

    <!-- 插入新属性 -->
    <insert id="insert" parameterType="Attribute">
        INSERT INTO attribute (
        category_id,
        name,
        value_type,
        options,
        is_required,
        is_searchable,
        sort,
        create_time,
        update_time
        ) VALUES (
        #{categoryId},
        #{name},
        #{valueType},
        #{options},
        #{isRequired},
        #{isSearchable},
        #{sort},
        NOW(),
        NOW()
        )

        <selectKey keyProperty="id" resultType="java.lang.Long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!-- 更新属性 -->
    <update id="update" parameterType="Attribute">
        UPDATE attribute
        SET
            name = #{name},
            value_type = #{valueType},
            options = #{options},
            is_required = #{isRequired},
            is_searchable = #{isSearchable},
            sort = #{sort},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除属性 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM attribute
        WHERE id = #{id}
    </delete>

</mapper>